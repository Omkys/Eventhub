{
  "buildCommand": "cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/build",
  "rewrites": [
    {
      "source": "/api/auth/login",
      "destination": "/api/login.js"
    },
    {
      "source": "/api/auth/register",
      "destination": "/api/register.js"
    },
    {
      "source": "/api/auth/refresh",
      "destination": "/api/auth/refresh.js"
    },
    {
      "source": "/api/auth/me",
      "destination": "/api/auth/me.js"
    },
    {
      "source": "/api/events/(.*)",
      "destination": "/api/events-management.js"
    },
    {
      "source": "/api/analytics",
      "destination": "/api/analytics.js"
    },
    {
      "source": "/api/users/profile",
      "destination": "/api/users/profile.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}